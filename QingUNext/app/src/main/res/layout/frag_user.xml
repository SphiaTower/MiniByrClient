<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/llUserPage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivUserPageFace"
        android:contentDescription="user_face"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvUserPageInfo"
        android:layout_below="@id/ivUserPageFace"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bnUserPageSend"
        android:text="发信"
        android:layout_width="wrap_content"
        android:layout_below="@id/tvUserPageInfo"
        android:layout_height="wrap_content" />
</RelativeLayout>