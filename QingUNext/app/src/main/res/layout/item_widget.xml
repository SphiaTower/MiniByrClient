<?xml version="1.0" encoding="utf-8"?>


<com.example.qingunext.app.custom_views.DividerRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                              android:paddingStart="20dp"
                                                              android:paddingEnd="5dp"
                                                              android:paddingTop="10dp"
                                                              android:paddingBottom="10dp"
                                                              android:background="@android:color/transparent"
                                                              android:layout_alignParentStart="true"
                                                              android:layout_alignParentTop="true"
                                                              android:id="@+id/rlWidgetList"
                                                              android:layout_width="match_parent"
                                                              android:layout_centerInParent="true"
                                                              android:layout_height="wrap_content">

    <view
        class="android.support.v7.widget.CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cvWidgetItemBoardName">

        <TextView
            android:id="@+id/tvWidgetItemBoardName"
            android:layout_width="50dp"
            android:background="@color/background_dark_blue"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="boardName" />
    </view>

    <TextView
        android:id="@+id/tvWidgetItemTitle"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/cvWidgetItemBoardName"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:text="Topic" />


</com.example.qingunext.app.custom_views.DividerRelativeLayout>
