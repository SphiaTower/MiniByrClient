<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_reply_black_24dp"
            android:background="@android:color/transparent"
            android:tint="@color/reply_button_tint"
            android:contentDescription="回复"
            android:id="@+id/bnReplyReply"/>
    <!--        <View  android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="#66CCFF"
                />-->
    <ImageButton
            android:layout_gravity="center_vertical"

            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:tint="@color/reply_button_tint"

            android:src="@drawable/ic_mail_black_24dp"
            android:contentDescription="站內"
            android:id="@+id/bnReplyMsg"/>
    <!--       <View  android:layout_height="match_parent"
               android:layout_width="1dp"
               android:background="#66CCFF"
               />-->
    <ImageButton
            android:layout_width="0dp"
            android:src="@drawable/ic_share_black_24dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:tint="@color/reply_button_tint"
            android:layout_gravity="center_vertical"

            android:contentDescription="点赞"
            android:id="@+id/bnReplyLike"/>
    <!--   <View  android:layout_height="match_parent"
           android:layout_width="1dp"
           android:background="#66CCFF"
           android:id="@+id/dvEditLeft"
           android:visibility="gone"
           />-->
    <ImageButton
            android:src="@drawable/ic_edit_black_24dp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:tint="@color/reply_button_tint"
            android:layout_gravity="center_vertical"

            android:layout_width="0dp"
            android:layout_height="60dp"
            android:contentDescription="编辑"
            android:id="@+id/bnReplyEdit"
            android:visibility="gone"/>
    <!--      <View  android:layout_height="match_parent"
              android:layout_width="1dp"
              android:background="#66CCFF"
              android:id="@+id/dvDelLeft"
              android:visibility="gone"
              />-->
    <ImageButton
            android:src="@drawable/ic_delete_black_24dp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:tint="@color/reply_button_tint"
            android:layout_gravity="center_vertical"

            android:layout_width="0dp"
            android:layout_height="60dp"
            android:visibility="gone"
            android:contentDescription="删除"
            android:id="@+id/bnReplyDelete"/>
</LinearLayout>